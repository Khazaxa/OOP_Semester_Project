<Window x:Class="RentCar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RentCar"
        mc:Ignorable="d"
        Title="Rent Some Cars" Height="450" Width="800"
       Icon="pack://application:,,,/Images/Icon.ico">
    <Window.Background>
        <ImageBrush ImageSource="../Images/background.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Window.Resources>
        <Style TargetType="Window">
            
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Add Car" Click="AddCar_Click" Margin="10" Width="200" Height="50"/>
            <Button Content="Rent Car" Click="RentCar_Click" Margin="10" Width="200" Height="50"/>
            <Button Content="Return Car" Click="ReturnCar_Click" Margin="10" Width="200" Height="50"/>
            <Button Content="Available Cars" Click="AvailableCars_Click" Margin="10" Width="200" Height="50"/>
        </StackPanel>
    </Grid>
</Window>
